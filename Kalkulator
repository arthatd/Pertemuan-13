    private void jb_hasilActionPerformed(java.awt.event.ActionEvent evt) {                                         
        switch (pilih){
            case 1:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1+angka2;
                angka = Double.toString(jumlah);
                jtf_tampil.setText(angka);
                break;
            case 2:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1-angka2;
                angka = Double.toString(jumlah);
                jtf_tampil.setText(angka);
                break;
            case 3:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1*angka2;
                angka = Double.toString(jumlah);
                jtf_tampil.setText(angka);
                break;
            case 4:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1/angka2;
                angka = Double.toString(jumlah);
                jtf_tampil.setText(angka);
                break;
            case 5:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1%angka2;
                angka = Double.toString(jumlah);
                jtf_tampil.setText(angka);
                break;
            default:
                break;
    }
    }                                        

    private void jb_00ActionPerformed(java.awt.event.ActionEvent evt) {                                      
        angka +="00";
        jtf_tampil.setText(angka);
    }                                     

